<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPhotoFirebase">


    <ImageView
        android:id="@+id/imageLoad"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_baseline_add_circle_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="GoGallery"
        />

    <EditText
        android:id="@+id/InfoNewPost"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageLoad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:fontFamily="@font/armata"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLength="150"
        android:padding="5dp"
        android:textSize="14sp"
        android:hint="@string/infoPost"
        />

    <Button
        android:id="@+id/buttonPush"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/InfoNewPost"
        android:layout_centerHorizontal="true"
        android:text="@string/push"
        android:textColor="@color/Grey"
        android:textAllCaps="false"
        android:onClick="PushInfoPost"
        />





</RelativeLayout>